@import 'compass/css3';

#page {
	border: solid 8px #a7a7a7;
	background-color: #535353;
}

span.first {
	text-transform: capitalize;
}
.drop-shadow {
	padding-bottom: 0.5em;
	@include media($first) {
	 	padding-bottom: 0.2em;
	}
	background: #424242 url('../images/bg/drop_shadow.gif') repeat-x left bottom;
}

.texture1 {
	background: #424242 url('../images/bg/texture1.gif') repeat;
}

.texture2 {
	background: #424242 url('../images/bg/texture2.jpg') repeat;
	/*@include background(
		radial-gradient(
		rgba(0,0,0,0.1) 10px, 
		rgba(0,0,0,0.5)),
		image-url('../images/bg/texture2.jpg')
	);*/
}

.texture3 {
	background: #424242 url('../images/bg/texture3.jpg') repeat;
}

.extend-nested-margins-padding {
	margin: 0 0.3em;
	padding: 0.5em;
	@include media($first) {
	 	margin: 0 0.2em;
	 	padding: 0.2em;
	}
	.nested-wrapper {
		margin: 0 0.3em;
		padding: 0 0.5em;
		@include media($first) {
		 	margin: 0 0.2em;
		 	padding: 0.2em;
		}
		ul.wrapper-body {
			padding: 1em 0;
		}
	}
}

.content-style-a {
	background-color: #e2dfe2;
	@extend .extend-nested-margins-padding;
}

.heading-border-bottom-margin-padding {
	padding-bottom: 0.5em;
	margin-bottom: 0.3em;	
}	

.heading-bottom-border-style-a {
	@extend .heading-border-bottom-margin-padding;
	border-bottom: 1px solid #19a388;
}

.heading-bottom-border-style-b {
	@extend .heading-border-bottom-margin-padding;
	border-bottom: 1px solid #535353;
}

.heading-bottom-border-style-c {
	@extend .heading-border-bottom-margin-padding;
	border-bottom: 1px solid #ff7c27;
}

.extend-image-wrapper {
	background: none;
	text-align: center;
}

.text-wrapper-style-a {
	a.wrapper-body, p.wrapper-body {
		color: #e2dfe2;
	}
	h4.wrapper-head {
		color: #ff7c27;
		@extend .heading-bottom-border-style-c;
	}
	@extend .list-touch;
}

.text-wrapper-style-b {
	h4.wrapper-head {
		color: #19a388;
	}
 	h5.wrapper-head {
		@extend .heading-bottom-border-style-b;
	}
	ul.styled-list, ol.styled-list {
		@extend .extend-styled-list-a;
	}
 }
 
.text-wrapper-style-c {
	p.wrapper-body {
		color: #e2dfe2;
	}
	a.wrapper-body {
		color: #19a388;
	}
	h4.wrapper-head {
		color: #19a388;
	}
	h5.wrapper-head {
		@extend .heading-bottom-border-style-b;
	}
 }
 
.list-touch {
	li.touch-list {
		
		min-height: 2em; 
		a.wrapper-body {
			height: 2em;
			display: block;
		}
		a.wrapper-body.selected {
			
			border-top: 2px solid #ff7c27;
		}
		margin-bottom: 0;
	}
}

.list-toggle-style-a {
	@extend .drop-shadow;
		border-top: 5px solid #19a388;
	.image-wrapper {
		@extend .texture3;
		text-align: center;
		border-bottom: 1px solid #e2dfe2;	
	}
	@extend .toggle-widget-style-a;
	margin: 0;
}

.list-toggle-style-b {
	@extend .drop-shadow;
	border-top: 5px solid #ff7c27;
	.image-wrapper {
		background-color: #2b2b2b;
		text-align: center;
	}
	@extend .toggle-widget-style-b;
	margin: 0;
}

.toggle-widget-style-a {
	@extend .extend-toggle-widget;
	@extend .texture3;
	.widget-summary {
		background-color: #e2dfe2;
		@extend .extend-toggle-widget-summary;
		.text-wrapper {
			p.wrapper-body {
				margin-bottom: 8px;
			}
		}
	}
	.widget-detail {
		background-color: #e2dfe2;
		@extend .text-wrapper-style-b;
		@extend .extend-form-style-a;
		.text-wrapper {
			border-top: 1px solid #19a388;
			a {
				color: #19a388;
			}
		}
	}
}

.toggle-widget-style-b {
	@extend .extend-toggle-widget;
	background-color: #2b2b2b;
	.widget-summary {
		@extend .extend-toggle-widget-summary;
		@extend .text-wrapper-style-a;
		.text-wrapper {
			padding-bottom: 0;
			border-top: 1px solid #656464;
		}
	}
	.widget-detail {
		@extend .extend-toggle-widget-detail;
		@extend .text-wrapper-style-c;
		.text-wrapper {
			padding-top: 0;
		}
	}
}
	
.extend-toggle-widget {
	a.widget-body {
		height: auto;
	}
	.text-wrapper {
		@extend .extend-nested-margins-padding;
	}
	.image-wrapper {
		@extend .extend-image-wrapper;
	}
}

.extend-toggle-widget-detail {
	.image-wrapper {
		border-bottom: none;
	}
}

/**** IMAGES *****/

img.transparent {
	border: none;
}

/**** FORMS *****/

.extend-form-style-a {
	form {
		margin: 1em 0;
		button.btn {
			border: none;
			min-height: 2em;
			background-color: #19a388;
			color: #e2dfe2;
			font-weight: bold;
		}
		.styled-select {
			@extend .extend-select-styled-a;
		}
	}
}
	
.extend-select-styled-a {
	display: inline-block;
    width: 4em;
    overflow: hidden;
    background: url(new_arrow.png) no-repeat right #ddd;
    border: 1px solid #535353;
  	vertical-align: bottom;
    select {
	    background: transparent;
	    width: 268px;
	    padding: 0.3em;
	    border: 0;
	    border-radius: 0;
	   -webkit-appearance: none;
   }
}

/**** LISTS *****/

.extend-styled-list-a {
	ol.styled-list li, ul.styled-list li {
		list-style-type: disc;
		list-style-position:inside;
	}
}