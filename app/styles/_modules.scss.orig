
header {
	@extend .drop-shadow;
	.wrapper {
		@extend .texture1;
		border-bottom: 1px solid #444;
		padding: 0.5em;
		@include media($first) {
		 	padding: 0.2em;
		}
		h1.wrapper-head,  p.wrapper-body {
			color: #ff7c27;
		}
		h1.wrapper-head {
			 margin-bottom: 0.1em;
			 @include breakpoint($first) {
			 	margin-bottom: 0.2em;
			}
		}
		p.wrapper-body {
			margin: -0.5em 0 0 0.5em;
		}
	}
}

nav {
	@extend .drop-shadow;
	.wrapper {
		@extend .texture2;
	}
	@extend .list-touch;
	li {
		@include  row();
		border-top: 1px solid #e2dfe2;
		.wrapper-body {			
			@include font-size(20);
			@include breakpoint($first) {
				@include font-size(16);
			}			
		}
		.touch-list-title{
			@include span-columns(13);
			@include omega();
			padding: 0.5em;
			color:  #e2dfe2;
		}
		&.selected{
			border-top: 1px solid  #ff7c27;
			.touch-list-title{
					color:  #ff7c27;
			}
		}
		a:hover {
			.touch-list-title{
				color:  #ff7c27;
			}
		}
		
	}
}

footer {
	border-top: 1px solid #e2dfe2;
	margin-bottom: 0.2em;
	.border {
		border-top: 1px solid #000;
	}
	.content-wrapper {
		@extend .extend-nested-margins-padding;
		.head-wrapper {
			@extend .extend-heading-wrapper-style-a;
		}
		.text-wrapper {
			@extend .extend-nested-margins-padding;
			@extend .text-wrapper-style-a;
		}
		.wrapper-body {
			@include font-size($grid-columns);
			color: #ff7c27;
			margin: 0;
			@include media($first) {
		 		@include font-size(14);
			}
			@include media($second) {
		 		@include font-size(18);
			}
		}
		.copy-wrapper {
			@extend .extend-nested-margins-padding;
			text-align: center;
			.wrapper-body {
				color: #ff7c27;
				@include media($second) {
					@include font-size(12); 
				}
				@include font-size(13);
			}	
		}
	}
}

.tweets {
	@extend .drop-shadow;
	border-top: 5px solid #ff7c27;
	padding-bottom: 0.5em;
	.content-wrapper {
		@extend .extend-nested-margins-padding;
		@extend .texture1;
		.head-wrapper {
			@extend .extend-heading-wrapper-style-a;
		}
		.text-wrapper {
			.nested-wrapper {
				@extend .extend-nested-margins-padding;
				@extend .text-wrapper-style-a;
			}
		}
		li.touch-list {
			p {
				min-height: 2em;
				color: #e2dfe2;
			}
			
			a {
				color: #ff7c27;
			}
			a.selected {
				margin-top: 2px;
				border-top: 2px solid #ff7c27;
			}
		}
	}
}

